[github]
  user = pencilcheck

[core]
  excludesfile = ~/.gitignore

[color]
  ui = auto

[hub]
  protocol = https

[push]
  default = simple

[log]
  decorate = true

[diff]
  tool = opendiff

[alias]
  check-renames = "!git status --porcelain | grep '^\\s*[DR]' | sed 's/^\\s*[DR]\\s*//' | sed 's/ -> .*//g' | git grep-files"

[merge]
  tool = opendiff
